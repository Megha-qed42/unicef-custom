{{ attach_library('unicef_vf/slider') }}
{{ attach_library('unicef_vf/hero-banner-carousel') }}

{# Template #}
{% block carousel_image_colour_blocked_background_block %}
  <div class="images-and-colour-blocked-background-wrapper relative">
    <div class="container h-full mx-auto">
      <div class="item-images-and-colour-blocked-background grid grid-cols-1 md:grid-cols-12 gap-y-48 md:gap-x-8">
        <div class="overlapped-data">
          {% if title|render|striptags|trim is not empty %}
            {% block title %}
              {{ title }}
            {% endblock %}
          {% endif %}

          {% if button_1|render|striptags|trim is not empty %}
            <div class="cta-button flex flex-col md:flex-row md:justify-start">
              <div{{ region_attributes.button_1|default(create_attribute()).addClass('mb-3 md:mb-0 md:mr-3') }}>{{ button_1 }}</div>
            </div>
          {% endif %}
        </div>

        <div class="data-col md:col-span-4">
          {{ items }}
        </div>

        <div class="bg-image-col hidden md:block md:col-span-6 md:col-start-7">
          {% if background_image|render|trim is not empty %}
            <div class="backgroundImage w-full h-full absolute top-0 left-0">
              {{ background_image }}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
{% endblock %}
