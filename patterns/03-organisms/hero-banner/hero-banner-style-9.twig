{{ attach_library('unicef_vf/hero-banner') }}

{# Template #}
{% block hero_banner_style_9_block %}
  <section class="hero-banner body-font style-9" role="banner">
    <div class="container relative h-full mx-auto">
      <div class="banner-content gap-y-4 gap-x-10 lg:gap-x-8 flex flex-col lg:flex-row lg:justify-between">
        <div class="left-container lg:w-60/100 lg:max-w-60/100">
          {% if headline|render|striptags|trim is not empty %}
            <div class="heading">
              {{ headline }}
            </div>
          {% endif %}
        </div>

        <div class="right-container lg:w-40/100 lg:max-w-40/100">
          {% if sub_headline|render|striptags|trim is not empty %}
            <div{{ region_attributes.sub_headline|default(create_attribute()).addClass('sub-headline displayXs-semibold text-text-body w-full mb-4 md:mb-6') }}>{{ sub_headline }}</div>
          {% endif %}

          {% if description|render|striptags|trim is not empty %}
            <div{{ region_attributes.description|default(create_attribute()).addClass('description textMd-regular text-text-body w-full mb-8 md:mb-10') }}>{{ description }}</div>
          {% endif %}

          {% if button_1|render|striptags|trim is not empty %}
            <div class="cta-button flex flex-col md:flex-row md:justify-start">
              {% if button_1 is not empty %}
                <div{{ region_attributes.button_1 }}>{{ button_1 }}</div>
              {% endif %}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </section>
{% endblock %}
