{{ attach_library('unicef_vf/footer-logo-content') }}

{# Defaults #}
{% set attributes = attributes|default(create_attribute()) %}

{# Classes #}
{% set classes = [
  'footer-logo-content-wrapper'
] %}

{# Template #}
{% block footer_logo_content_block %}
  <div {{ attributes.addClass(classes | sort | join(' ') | trim) }}>
    <div class="flex flex-col">
      <div class="footer-logo flex items-center mb-4">
        <div class="mr-0">{{ logo }}</div>
      </div>

      {% if text|render|striptags|trim is not empty %}
        <div class="footer-content text-text-body font-primary">
          {{ text }}
        </div>
      {% endif %}
    </div>
  </div>
{% endblock %}
